{
  "name": "GHP-MM Sniffer",
  "version": "1.0",
  "slug": "ghp_mm_sniffer",
  "init": false,
  "description": "Gree / Cooper&Hunter / Grundig GHP-08 RS485 sniffer with MQTT",
  "arch": ["aarch64", "amd64", "armv7"],
  "startup": "application",
  "boot": "auto",
  "options": {
    "mqtt": true,
    "mqtt_host": "core-mosquitto",
    "mqtt_port": 1883,
    "mqtt_user": "celiv",
    "mqtt_password": "230960",
    "topic_prefix": "ghp08"
  },
  "schema": {
    "mqtt": "bool",
    "mqtt_host": "str",
    "mqtt_port": "int",
    "mqtt_user": "str",
    "mqtt_password": "str",
    "topic_prefix": "str"
  },
  "devices": ["/dev/ttyUSB0:/dev/ttyUSB0:rwm"],
  "map": ["config:rw"],
  "command": "python3 ghp_sniffer.py --mqtt"
}


